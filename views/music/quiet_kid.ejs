    <script type="text/javascript">
        // On gère les carousels
        $('div[data-target="#galleryModal"]').on('click', function (data) {
            $(`#carouselGallery .carousel-item`).removeClass('active');
            let i = parseInt($(data.currentTarget).attr('data-i'));
            console.log(`#carouselGallery .carousel-item:nth-child(${i+1})`);
            $(`#carouselGallery .carousel-item:nth-child(${i+1})`).addClass('active');
        })
